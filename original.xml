        <Button id="iconAlert" icon="sap-icon://message-error" design="Transparent" tooltip="Alerts" />
        <Button id="printPreviewButton" text="Print Preview" eventHandler="onPressPrintPreview" />
        <Button id="messagesButton" text="Messages" eventHandler="onPressMessages" />
        <Button id="personalSettingButton" text="Personal Setting" eventHandler="onPressPersonalSetting" />
        <Button id="saveAsTemplateButton" text="Save As Template" eventHandler="onPressSaveAsTemplate" />
        <Button id="loadFromTemplateButton" text="Load from Template" eventHandler="onPressLoadFromTemplate" />
      </FlowLayout>

      <!-- Main PO Header Details -->
      <MatrixHeadData rowSpan="1" colSpan="2" />
      <MatrixLayout id="poHeaderLayout" columns="8" width="100%" cellPadding="2px">
        <MatrixData rowIndex="0" colIndex="0" />
        <TextView id="poTypeText" text="Main Repair/RC/RT PO" design="TextViewDesign.Standard" />
        <MatrixData rowIndex="0" colIndex="1" />
        <InputField id="poNumberField" value="510009405" readOnly="true" width="10em" />
        <MatrixData rowIndex="0" colIndex="2" />
        <TextView id="vendorLabel" text="Vendor" design="TextViewDesign.Standard" />
        <MatrixData rowIndex="0" colIndex="3" />
        <InputField id="vendorField" value="" readOnly="true" width="15em" />
        <MatrixData rowIndex="0" colIndex="4" />
        <TextView id="docDateLabel" text="Doc. date" design="TextViewDesign.Standard" />
        <MatrixData rowIndex="0" colIndex="5" />
        <DateField id="docDateField" value="11.02.2016" displayFormat="DD.MM.YYYY" width="8em" readOnly="true" />
        <MatrixData rowIndex="0" colIndex="6" />
        <Image id="docDateWarningIcon" src="sap-icon://alert" tooltip="Warning" />
      </MatrixLayout>

      <!-- Main Tab Strip for PO Details -->
      <MatrixHeadData rowSpan="1" colSpan="2" />
      <TabStrip id="mainTabStrip" selectedTabKey="deliveryInvoiceTab" selectionChange="onSelectMainTab" width="100%">
        <Tab id="deliveryInvoiceTab" text="Delivery/Invoice">
          <FormContainer id="deliveryInvoiceForm" layout="TwoColumn" width="100%">
            <!-- Left Column -->
            <FormElement id="paymentTermsElement">
              <Label id="paymentTermsLabel" text="Payment Terms" labelFor="paymentTermsField" />
              <InputField id="paymentTermsField" value="0001" width="5em" onChange="onEditPaymentTerms" />
            </FormElement>
            <FormElement id="paymentInDaysElement">
              <Label id="paymentInDaysLabel" text="Payment in" labelFor="paymentInDaysField1" />
              <FlowLayout>
                <InputField id="paymentInDaysField1" value="" width="5em" onChange="onEditPaymentInDays1" />
                <TextView id="daysText1" text="days" />
                <InputField id="paymentInPercentField" value="" width="5em" onChange="onEditPaymentInPercent" />
                <TextView id="percentText" text="%" />
              </FlowLayout>
            </FormElement>
            <FormElement id="paymentInDaysElement2">
              <Label id="paymentInDaysLabel2" text="Payment in" labelFor="paymentInDaysField2" />
              <FlowLayout>
                <InputField id="paymentInDaysField2" value="" width="5em" onChange="onEditPaymentInDays2" />
                <TextView id="daysText2" text="days" />
              </FlowLayout>
            </FormElement>
            <FormElement id="paymentInDaysNetElement">
              <Label id="paymentInDaysNetLabel" text="Payment in" labelFor="paymentInDaysNetField" />
              <FlowLayout>
                <InputField id="paymentInDaysNetField" value="" width="5em" onChange="onEditPaymentInDaysNet" />
                <TextView id="daysNetText" text="days net" />
              </FlowLayout>
            </FormElement>
            <FormElement id="incotermsElement">
              <Label id="incotermsLabel" text="Incoterms" labelFor="incotermsFOBField" />
              <FlowLayout>
                <InputField id="incotermsFOBField" value="FOB" width="5em" onChange="onEditIncotermsFOB" />
                <InputField id="incotermsFromPlantField" value="From Plant" width="15em" onChange="onEditIncotermsFromPlant" />
              </FlowLayout>
            </FormElement>
            <FormElement id="grMessageElement">
              <Label id="grMessageDummyLabel" text="" />
              <CheckBox id="grMessageCheckBox" text="GR Message" selected="false" toggle="onToggleGRMessage" />
            </FormElement>

            <!-- Right Column -->
            <FormElement id="currencyElement">
              <Label id="currencyLabel" text="Currency" labelFor="currencyField" />
              <InputField id="currencyField" value="INR" readOnly="true" width="5em" />
            </FormElement>
            <FormElement id="exchangeRateElement">
              <Label id="exchangeRateLabel" text="Exchange Rate" labelFor="exchangeRateField" />
              <InputField id="exchangeRateField" value="1.00000" width="10em" onChange="onEditExchangeRate" />
            </FormElement>
            <FormElement id="exchRateFixedElement">
              <Label id="exchRateFixedDummyLabel" text="" />
              <CheckBox id="exchRateFixedCheckBox" text="Exch.Rate Fixed" selected="false" toggle="onToggleExchangeRateFixed" />
            </FormElement>
          </FormContainer>
